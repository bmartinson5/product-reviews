<h2>Company Products</h2>


<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <div>
        <li>
          <h4><%=link_to product.name, product_path(id: product.id) %></h4>
        </li>
      </div>
    <% end %>
  </ul>
<% else %>
  <p>No products created yet.</p>
<% end %>

<% binding.pry %>

<h3>Most Reviewed Product: <%=link_to @most_reviewed.name, product_path(id: @most_reviewed.id) %></h3>

<p><%= link_to "Create a product", new_product_path %></p>
