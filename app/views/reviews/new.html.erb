<% if @review.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<h2>Write a review for <%= @product.name %></h2>
<%= form_for @review, :url => product_reviews_path do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %><br><br>
  <%= f.label :rating %>
  <%= f.number_field :rating %><br><br>
  <%= f.label :content_body %>
  <%= f.text_area :content_body %><br><br>
  <%= f.submit %>
<% end %>
